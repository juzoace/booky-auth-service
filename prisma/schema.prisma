generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(cuid())
  email             String      @unique
  firstName         String      
  lastName          String      @unique
  isActive          Boolean
  isEmailVerified   Boolean
  hash              String
  salt              String
  phoneNumber       String
  created_at        DateTime    @default(now())
  lastLogin         DateTime    @updatedAt()  
}
